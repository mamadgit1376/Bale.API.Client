<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageId>Mohammad.Bale.Bot.Client</PackageId>

		<Version>1.0.4</Version>

		<Authors>mohammad arbab - محمد ارباب</Authors>

		<Description>پروژه ای برای اتصال و مدیریت ربات های پیامرسان بله</Description>
		<PackageReadmeFile>README.md</PackageReadmeFile>

		<RepositoryUrl>https://github.com/mamadgit1376/Bale.API.Client</RepositoryUrl>

		<PackageTags>bale; bot; api; client; messenger; bale-bot</PackageTags>

	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Http" Version="9.0.9" />
		<PackageReference Include="Microsoft.Extensions.Options" Version="9.0.9" />
	</ItemGroup>

	<ItemGroup>
		<None Include="README.md" Pack="true" PackagePath="\"/>
	</ItemGroup>
</Project>